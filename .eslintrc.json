{
  "root": true,
  "env": {
    "browser": true,
    "node": true
  },
  "extends": [
    "@nuxtjs/eslint-config-typescript",
    "plugin:nuxt/recommended"
  ],
  "plugins": [
  ],
  // add your custom rules here
  "rules": {
    "indent": "off",
    "no-tabs": "off",
    "quotes": [
      "error",
      "double"
    ],
    "semi": [
      "error",
      "always"
    ],
    "no-return-await": "error",
    "multiline-comment-style": [
      "error",
      "starred-block"
    ]
  }
}
